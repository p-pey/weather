{
       "compilerOptions": {
         "target": "ES6",                      
         "module": "ESNext",                   
         "jsx": "react-jsx",                   
         "strict": true,                       
         "esModuleInterop": true,              
         "skipLibCheck": true,                 
         "forceConsistentCasingInFileNames": true,
         "moduleResolution": "node",           
         "baseUrl": "./src",
         "paths": {
           "*": ["./*"]
         }
       },
       "include": ["src/**/*"],
       "exclude": ["node_modules", "dist"]
     }
     